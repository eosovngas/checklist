<div class="text-center">
  <div class="container">
    <div class="jumbotron">
        <h1 class="display-3">Registrarte</h1>
        <p class="lead"> Para registrarte debes utilizar tu correo corporativo.</p>
        <hr class="my-4">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class= "form-group">
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control', placeholder: "tucorreo@clarochile.cl" %>
            </div>
          </div>

          <div class= "form-group">
            <div class="field">
              <%= f.label :Contrase単a %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> Caracteres minimos)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", :class => 'form-control', placeholder: "Ingresa tu contrase単a" %>
            </div>
          </div>

          <div class= "form-group">
            <div class="field">
              <%= f.label :Confirma_contrase単a %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control', placeholder: "Repite nuevamente tu contrase単a"%>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "Confirmar", :class => 'btn btn-primary'%>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
