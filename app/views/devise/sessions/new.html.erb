<div class="text-center">
  <div class="container">
    <div class="jumbotron">
        <h1 class="display-3">Iniciar sesión</h1>
        <p class="lead"> Para Iniciar sesión debes utilizar tu correo corporativo.</p>
        <hr class="my-4">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          
          <div class= "form-group">
            <div class="field">
              <%= f.label :Email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control', placeholder: "tucorreo@clarochile.cl" %>
            </div>
          </div>

          <div class= "form-group">
            <div class="field">
              <%= f.label :Contraseña %><br />
              <%= f.password_field :password, autocomplete: "off", :class => 'form-control', placeholder: "tu contraseña" %>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "Iniciar Sesión", :class => 'btn btn-success'%>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
